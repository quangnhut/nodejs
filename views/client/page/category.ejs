<% include ../layout/header.ejs %>
<!-- Header End -->
<div id="maincontainer">
  <section id="product">
    <div class="container">
     <!--  breadcrumb -->  
      <ul class="breadcrumb">
        <li>
          <a href="/">Trang chủ</a>
          <span class="divider">/</span>
        </li>
        <li class="active">Danh mục</li>
      </ul>
      <div class="row">        
        <!-- Sidebar Start-->
        
        <!-- Sidebar End-->
        <!-- Category-->
        <div class="span9">          
          <!-- Category Products-->
          <section id="category">
            <div class="row">
              <div class="span9">
               <!-- Category-->
                <section id="categorygrid">
                  <ul class="thumbnails grid">
                     <% product.forEach(function(pro){  %>
                      <li class="span3">
                        <a class="productname" href="product.html"><%= pro.name %></a>
                        <div class="thumbnail">
                          <span class="sale tooltip-test">Sale</span>
                          <a href="/chi-tiet/<%= pro.nameKhongDau%>.<%= pro._id %>.<%= pro.categoryID%>.html"><img src="upload/<%= pro.image %>"></a>
                          <div class="pricetag">
                            <span class="spiral"></span><a href="/add-cart.<%= pro._id %>" class="productcart">Thêm</a>
                            <div class="price">
                              <div class="pricenew"><i class="fa fa-usd"></i><%= pro.price %></div>
                            </div>
                          </div>
                        </div>
                      </li>
                <% }) %>           
                  </ul>
                  <div class="pagination pull-right">
                    <ul>
                      
                    </ul>
                  </div>
                </section>
              </div>
            </div>
          </section>
        </div>
      </div>
    </div>
  </section>
</div>

<!-- Footer -->
<% include ../layout/footer.ejs %>