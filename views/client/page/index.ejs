<% include ../layout/header.ejs %>
<!-- Header End -->

<div id="maincontainer">
  <!-- Slider Start-->
  <section class="slider">
    <div class="container">
      <div class="flexslider" id="mainslider">
        <ul class="slides">
          <li>
            <img src="img/banner2.jpg" alt="" />
          </li>
          <li>
            <img src="img/banner3.jpg" alt="" />
          </li>
          <li>
            <img src="img/banner4.jpg" alt="" />
          </li>
        </ul>
      </div>
    </div>
  </section>
  <!-- Slider End-->
  <!-- Featured Product-->
   <% category.forEach(function(cate){ var id = 0; %>
      <section id="featured" class="row mt40">
        <div class="container">
         
          <h1 class="heading1"><span class="maintext"> <%= cate.name%> </span><span class="subtext"></span></h1>
          
          <ul class="thumbnails">
            <% product.forEach(function(pro){ if(id < product.length) { if(pro.categoryID == cate._id){ id ++ ; %>

                  <li class="span3">
                    <a class="productname" href="product.html"> <%= pro.name %> </a>
                    <div class="thumbnail">
                      <span class="sale tooltip-test">Sale</span>
                      <a href="/chi-tiet/<%= pro.nameKhongDau%>.<%= pro._id%>.<%= pro.categoryID%>.html"><img alt="" src="upload/<%= pro.image %>"></a>
                      <div class="pricetag">
                        <span class="spiral"></span><a href="/add-cart.<%= pro._id %>" class="productcart">ThÃªm</a>
                        <div class="price">
                          <div class="pricenew"><i class="fa fa-usd"></i> <%= pro.price %></div>
                        </div>
                      </div>
                    </div>
                  </li>
            <% }}})%>
           
          </ul>
          
        </div>
      </section>
  <% })%>
