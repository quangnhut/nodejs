<div class="page-container row-fluid container-fluid">
    <!-- SIDEBAR - START -->
   
         <% include ../layout/menu.ejs %>
    <!--  SIDEBAR - END -->
    <!-- START CONTENT -->
    <section id="main-content" class=" ">
        <section class="wrapper main-wrapper row" style=''>
            <div class='col-xs-12'>
                <div class="page-title">
                    <div class="pull-left">
                        <h1 class="title">Danh sách người dùng</h1>
                    </div>
                    <div class="pull-right hidden-xs">
                       
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-lg-12">
                <section class="box ">
                    <header class="panel_header">
                        <button class="btn btn-primary"><a href="admin/user/them-user.html"><i class="fa fa-plus-circle"></i>  Thêm</a></button>
                        <div class="actions panel_actions pull-right">
                            <a class="box_toggle fa fa-chevron-down"></a>
                            <a class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></a>
                            <a class="box_close fa fa-times"></a>
                        </div>
                    </header>
                    <div class="content-body">
                        <div class="row">
                            <% if(success_msg != ''){ %> 
                                <div class="alert alert-success"><%= success_msg%></div>
                           <% } %>
                            <div class="col-xs-12">
                                <!-- ********************************************** -->
                                <table id="example" class="display table table-hover table-condensed">
                                    <thead>
                                        <tr>
                                            <th>Hành động</th>
                                            <th>Tên người dùng</th>
                                            <th>Email</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% var id = 0 %>
                                        <% data.forEach(function(item){ id++ %>
                                        <tr style="text-align: center;">
                                             <td >
                                                <a href="/admin/user/<%= item._id %>/xoa-user.html" style="margin-right: 20px; "><i class="fa fa-trash text-danger" title="Delete"></i></a>
                                                <a href="/admin/user/<%= item._id %>/sua-user.html"><i class="fa fa-pencil text-primary" title="Edit"></i></a>
                                            </td>
                                            <td><%= item.username%></td>
                                            <td><%= item.email%></td>
                                           
                                        </tr>
                                        <%})%>
                                    </tbody>
                                </table>
                                <!-- ********************************************** -->
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </section>
    </section>
    <!-- END CONTENT -->
