        <% include ../layout/header.ejs %>
        <!-- END TOPBAR -->
        <!-- START CONTAINER -->
        <div class="page-container row-fluid container-fluid">
            <!-- SIDEBAR - START -->         
                 <% include ../layout/menu.ejs %>
            <!--  SIDEBAR - END -->
            <!-- START CONTENT -->
            <section id="main-content">
                <section class="wrapper main-wrapper row" >
                    <div class='col-xs-12'>
                        <div class="page-title">
                            <div class="pull-left">
                                <h1 class="title">Danh Sách đơn hàng</h1>
                            </div>
                            <div class="pull-right hidden-xs">
                               
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="col-lg-12">
                        <section class="box ">
                            <header class="panel_header">
                                <h2 class="title pull-left">Tất cả đơn</h2>
                                <div class="actions panel_actions pull-right">
                                    <a class="box_toggle fa fa-chevron-down"></a>
                                    <a class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></a>
                                    <a class="box_close fa fa-times"></a>
                                </div>
                            </header>
                            <div class="content-body">
                                <div class="row">
                                    <% if(success_msg != ''){ %> 
                                        <div class="alert alert-success"><%= success_msg%></div>
                                   <% } %>
                                   <div class="row" style="padding-left: 50px;">
                                       <div>
                                           <p><strong>Tên khách hàng: </strong> <%= cart.name %> </p>
                                       </div>
                                       <div>
                                           <p><strong>Số điện thoại: </strong> <%= cart.phone %></p>
                                       </div>
                                       <div>
                                           <p><strong>Email: </strong> <%= cart.email %></p>
                                       </div>
                                       <div>
                                           <p><strong>Ghi chú: </strong> <%= cart.message %></p>
                                       </div>
                                   </div>
                                    <div class="col-xs-12">
                                        <!-- ********************************************** -->
                                        <table id="example" class="display table table-hover table-condensed">
                                            <thead>
                                                <tr>
                                                    <th>ID</th>
                                                    <th>Tên</th>
                                                    <th>Hình</th>
                                                    <th>Số Lượng</th>
                                                    <th>Tiền</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% var id = 0; var total = 0 %>
                                                <% cart.cart.forEach(function(item){ id ++; total += item.tien;%>
                                                <tr>
                                                    <td><%= id%></td>
                                                    <td><%= item.item.name%></td>
                                                    <td> <img src="upload/<%= item.item.image%>" width="150px" alt=""></td>
                                                    <td><%= item.soLuong%></td>
                                                    <td><%= item.tien%>đ</td>
                                                </tr>
                                                <%})%>
                                                <tr>
                                                    <td colspan="5">
                                                        <% if(cart.status == 0){ %>
                                                            <a href="/admin/cart/<%= cart._id %>/checkout.html">Thanh Toán</a>
                                                        <%}else{ %>
                                                            <span>Đã Thanh Toán</span>
                                                        <%}%> | 
                                                        <a href="/admin/cart/<%= cart._id %>/delete-cart.html">Xoá</a>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td colspan="5">
                                                        <p><strong style="color:red">Tồng Tiền: </strong> <%= total %>đ</p>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                        <!-- ********************************************** -->
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </section>
            </section>
